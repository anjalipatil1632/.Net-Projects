@model EmployeeTravelBookingSystem_MVC.User
@{
    Layout = null;

}

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html lang="en" class="h-100">
<head>
    <title>Login Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="widh=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/LoginStyle.css">
</head>
<body class="h-100">

    <div class="container-fluid" style="        opacity: 0.8;
        background: linear-gradient(rgba(0,0,0,0.25),rgba(0,0,0,0.25));
        width: auto;
        height: 100vh;">
        <div class="row h-100 justify-content-center align-items-center">

            <div class="col-10 col-md-8 col-lg-4">

                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-container" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="login-form">
                        <h1 class="title">LOGIN HERE !!!</h1>

                        @*<div class="text-danger" style="text-align:center; color:salmon; border: 1px solid thin black;">@TempData["Message"]</div>*@
                        <div class="form-floating mb-4">
                            @Html.TextBoxFor(m => m.LoginId, new { autocomplete = "off", @class = "form-control input-sm", @placeholder = "Username", required = "required", @type = "name", name = "LoginID" })
                            @Html.ValidationMessageFor(m => m.LoginId, "", new { @class = "text-danger" })
                            @Html.Label("LoginId", "LoginId")
                        </div>

                        <div class="form-floating mb-4">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm", @placeholder = "Password", required = "required", @type = "password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            @Html.Label("Password", "Password")
                        </div>

                        <div class="btn-group col-lg-6 mb-3">
                            <button type="submit" class="btn-login">Login</button>
                        </div>
                    </div>

                }
            </div>

        </div>

        <div>
            <div class="text-danger" style="text-align:center; color:salmon; border: 1px solid thin black;">@TempData["Message"]</div>
            <a href="~/Home/Homepage" style="color:white;float:right">Back To Home</a>
        </div>
    </div>

</body>
</html>