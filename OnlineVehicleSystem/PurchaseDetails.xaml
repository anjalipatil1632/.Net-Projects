        xmlns:local="clr-namespace:OnlineVehicleSystem"
        mc:Ignorable="d"
        Title="PurchaseDetails" Height="450" Loaded="Window_Loaded" Width="800">
    <Grid RenderTransformOrigin="0.532,0.488"  Background="LightBlue">
