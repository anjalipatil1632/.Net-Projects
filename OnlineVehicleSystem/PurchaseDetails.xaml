        <DataGrid x:Name="dgDetails" BorderThickness="4px" HorizontalAlignment="Left" SelectionChanged="DgDetails_SelectionChanged" Height="291" Margin="10,60,0,0" VerticalAlignment="Top" Width="772"  Background="White" BorderBrush="#FF228BF1" AlternatingRowBackground="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"/>
        <TextBlock x:Name="tbl_adminName" HorizontalAlignment="Left" Height="27" TextWrapping="Wrap" VerticalAlignment="Top" Width="3" Margin="93,377,0,0" FontSize="0.1" FontFamily="Segoe Print"  />



    </Grid>
</Window>
